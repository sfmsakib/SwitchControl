<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/on_off_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Switch On/Off"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_green"
        android:src="@drawable/baseline_power_settings_new_24"
        />

    <TextView
        android:id="@+id/response_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/on_off_button"
        app:layout_constraintStart_toStartOf="@+id/on_off_button"
        app:layout_constraintTop_toBottomOf="@+id/on_off_button" />
</LinearLayout>